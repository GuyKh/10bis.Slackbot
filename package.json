{
  "name": "10bis_slackbot",
  "version": "0.1.1",
  "description": "_A Slackbot that searches 10Bis site_",
  "dependencies": {
    "@types/express": "^4.17.0",
    "app-root-path": "^2.2.1",
    "body-parser": "^1.19.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "moment-timezone": "^0.5.26",
    "node-ts-cache": "^2.0.0",
    "request": "^2.88.0",
    "typescript": "^3.5.2",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "chai": "^4.2.0",
    "coveralls": "^3.0.4",
    "eslint": "^6.0.1",
    "eslint-plugin-chai-expect": "^2.0.1",
    "eslint-plugin-mocha": "^5.3.0",
    "mocha": "^6.1.4",
    "mocha-typescript": "^1.1.17",
    "mock-express-response": "^0.2.2",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0"
  },
  "scripts": {
    "precommit": "./node_modules/.bin/tslint `git diff --name-only | grep .ts` --fix",
    "eslint": "./node_modules/.bin/eslint -c .eslintrc.js src/*.js test/*.js",
    "tslint": "./node_modules/.bin/tslint --project ./",
    "start": "./node_modules/.bin/tsc --module commonjs --sourceMap --target ES6 -p ./tsconfig.json && node ./bin/www",
    "pretest": "./node_modules/.bin/tsc --module commonjs --sourceMap --target ES6 -p ./tsconfigTest.json",
    "test": "./node_modules/.bin/nyc mocha --recursive --timeout 15000 --require ts-node/register --bail",
    "cover": "./node_modules/.bin/nyc npm t",
    "coverage": "./node_modules/.bin/nyc report --reporter=text-lcov | coveralls",
    "coveralls": "./node_modules/.bin/nyc report --reporter=lcovonly && cat ./coverage/lcov.info | coveralls",
    "watch": "./node_modules/.bin/mocha-typescript-watch",
    "prepare": "./node_modules/.bin/tsc --module commonjs --sourceMap --target ES6 -p ./tsconfig.json"
  },
  "engines": {
    "npm": "6.0.x"
  },
  "nyc": {
    "include": [
      "src/*",
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "typings",
      "src/server.js"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guykh/10bis.Slackbot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/guykh/10bis.Slackbot/issues"
  },
  "homepage": "https://github.com/guykh/10bis.Slackbot#readme"
}
